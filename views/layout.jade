    body(ng-app="polls")
        block content

        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-resource.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-route.min.js")
        script(src="http://code.jquery.com/jquery-latest.js")
        script(src="http://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.js")
        script(src='/javascripts/app.js')
