doctype html
html(ng-app='polls')
    head
        base(href='/')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width', init-scale=1, user-scalable='no')
        title= title

        link(href="http://cdnjs.cloudflare.com/ajax/libs/select2/3.5.1/select2.css" rel="stylesheet")
        link(href="http://cdnjs.cloudflare.com/ajax/libs/ratchet/2.0.2/css/ratchet.css" rel="stylesheet")
