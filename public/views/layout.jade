doctype html
html(ng-app='polls')
    head
        base(href='/')
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width', init-scale=1, maximum-scale=1, minimal-ui, user-scalable='no')
        meta(name="apple-mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content="black")

        title= title

        include includes/css

    body.metro(ng-app="polls")
        block content

        include includes/js
