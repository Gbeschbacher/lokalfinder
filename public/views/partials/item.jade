//- BIG VERSION OF RESULT TABLE
div(ng-show='poll.userVoted')
    div.margin-top-50
        div.flexContainer
            div.container
                div.grid.row
                    div.row.col-xs-12.background.padding-15
                        div.height-reset.color-black
                            table.result-table
                              tbody
                                tr(ng-repeat='choice in poll.choices')
                                  td {{choice.text}}
                                  td
                                    table(style='width: {{choice.votes.length/poll.totalVotes*80}}%;')
                                      tbody
                                        tr
                                          td {{choice.votes.length}}

//- PIE-CHART AS RESULT
div.margin-top-50(ng-show='poll.userVoted')
    div.flexContainer
        div.container
                div.row.col-xs-12
                    div.height-reset.color-black.background.col-md-6.col-md-offset-3
                        nvd3-pie-chart(
                            data="chart.chartData",
                            noData ="chart.noData"
                            id="exampleId",
                            x="chart.xFunction()",
                            y="chart.yFunction()",
                            showLabels="true",
                            width=250,
                            height=250)

